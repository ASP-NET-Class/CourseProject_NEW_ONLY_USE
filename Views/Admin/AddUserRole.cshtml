@model CourseProject.ViewModels.AdminAddUserRoleViewModel
<h2>Pick a role for @Model.User.UserName</h2>

<form asp-controller="Admin" asp-action="AddUserRole"
      method="post">
    <div asp-validation-summary="All"></div>
    <input asp-for="@Model.User.Id" type="hidden" />
    <label asp-for="Role"></label>
    <select asp-for="Role"
            asp-items="@Model.RoleList"></select>
    <br />
    <button type="submit">Add Role</button>
</form>
<p><a asp-controller="Account" asp-action="AllUser">Back to list of all users.</a></p>
<p><a asp-controller="Admin" asp-action="Index">Back to Administrator Homepage.</a></p>

