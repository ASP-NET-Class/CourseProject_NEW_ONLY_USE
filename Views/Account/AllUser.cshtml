@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    if (Model.Count() < 1)
    {

        <p>No user in database yet.</p>
    }
    else
    {
        <h2>All Users</h2>
        <br />
        <p><a asp-action="Register">Add a User</a></p>
        <table border="1">
            <tr>
                <th>User Name</th>
                <th>Add Role</th>
            </tr>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <!--makes the Add a role text hyperlink which will go to the AdminController and
                        AddUserRole method with a value of user.Id-->
                    <td>
                        <a asp-controller="Admin"
                           asp-action="AddUserRole"
                           asp-route-id="@user.Id">
                            Add a role
                        </a>
                    </td>
                </tr>
            }
        </table>
    }
}

<p><a asp-controller="Admin" asp-action="Index">Back to Administrator Homepage</a></p>